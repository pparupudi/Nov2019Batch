<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="All Test Suite">
    <listeners>

        <listener class-name="Academy.Listeners"></listener>
        <listener class-name="Academy.ExtentTestNGIReporterListener"></listener>

    </listeners>
    
    <test verbose="2" preserve-order="true" name="Validating User Login">
        <classes>
            <class name="Academy.Homepage"/>
        </classes>
        </test>
    <test verbose="2" preserve-order="true" name="Validating Navigation in the page">
    <classes>
            <class name="Academy.ValidateNavigation"/>
    </classes>
    </test>
    <test verbose="2" preserve-order="true" name="Validating title in the page">
        <classes>
            <class name="Academy.ValidateTitle"/>
        </classes>
    </test>

</suite>